pipeline {
    agent any
    options {
        // This is required if you want to clean before build
        skipDefaultCheckout(true)
        description('Global options for the pipeline')
    }

    environment {
        // Environment variables for the pipeline
        JENKINS_HOME = "$JENKINS_HOME"
        BUILD = "${JENKINS_HOME}/workspace/mlops"
    }

    stages {
        stage('Preparation') {
            steps {
                cleanWs()
                checkout scm
            }
            description('Preparing for the build')
        }

        stage('Checkout') {
            steps {
                git 'https://github.com/nocsland/other-projects.git'
            }
            description('Checking out the repository')
        }

        stage('Build image') {
            steps {
                script {
                    dir('translator/') {
                        sh 'docker build -t translator-img .'
                    }
                }
            }
            description('Building the Docker image')
        }

        stage('Run container') {
            steps {
                script {
                    sh 'docker run -d -p 8000:8000 --name translator-app translator-img'
                }
            }
            description('Running the Docker container')
        }
    }
}
