pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/nocsland/other-projects.git'
            }
        }

        stage('Install pip') {
            steps {
                sh 'sudo apt update && sudo apt install -y python3-pip'
            }
        }

        stage('Install dependencies') {
            steps {
                script {
                    dir('/root/translator/') {
                        sh 'pip install --no-cache-dir -r translator/requirements.txt'
                    }
                }
            }
        }

        stage('Build Docker image') {
        script {
            dir('/root/translator/') {
                sh 'docker build -t translator-container .'
            }
        }
    }
}
