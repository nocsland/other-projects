// пайплайн без тестов
pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/nocsland/other-projects.git'
            }
        }

        stage('Install dependencies') {
            steps {
                sh 'pip install --no-cache-dir -r requirements.txt'
            }
        }

        stage('Build Docker image') {
            steps {
                sh 'docker build -t translator-container .'
            }
        }
    }
}
